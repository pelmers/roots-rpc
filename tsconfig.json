{
  "compilerOptions": {
    "outDir": "./dist/",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
